<body>
  <div>ðŸ‘» Spooky forces activating in...</div>
  <div id="countdown">5</div>

  <!-- Optional audio jump scare -->
  <audio id="scream" src="scream.mp3" preload="auto"></audio>

  <script>
    let timeLeft = 5;
    const countdownEl = document.getElementById('countdown');
    const scream = document.getElementById('scream');

    const countdown = setInterval(() => {
      timeLeft--;
      countdownEl.textContent = timeLeft;

      if (timeLeft <= 0) {
        clearInterval(countdown);
        document.body.style.backgroundColor = "red";
        countdownEl.textContent = "BOO! ðŸ‘¹";
        scream.play(); // Play scary sound
        flashScreen();  // Optional visual effect
      }
    }, 1000);

    // Optional flashing effect
    function flashScreen() {
      let flashes = 6;
      let flashing = setInterval(() => {
        document.body.style.backgroundColor = 
          document.body.style.backgroundColor === "black" ? "red" : "black";
        flashes--;
        if (flashes <= 0) clearInterval(flashing);
      }, 300);
    }
  </script>
